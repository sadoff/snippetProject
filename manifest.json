{
  "name": "PAO Cookies",
  "description": "Расширение позволяет облегчить работу с куками.",
  "permissions": [
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "*://*/"
  ],
  "incognito": "split",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "addCookie.html",
    "default_icon": "icon.png"
  }
}
